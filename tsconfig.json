{
  "compilerOptions": {
    "target": "ESNext", // 目标 ECMAScript 版本
    "module": "ESNext", // 模块系统
    "moduleResolution": "Bundler", // 模块解析策略
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "checkJs": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "outDir": "./out",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"], // 路径别名
      "~/*": ["typings/*"],
      "~renderer/*": ["src/renderer/typings/*"]
    }
  },
  "exclude": ["node_modules", "dist"], // 需要排除的文件夹
  "files": [],
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.web.json" }]
}
